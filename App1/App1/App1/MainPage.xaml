<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage"
             xmlns:me="clr-namespace:App1">
    <ContentPage.Content>
        <StackLayout Spacing="10">
            <Label Text="{x:Static me:MainPage.TEXT}"/>
            <Label Text="Enter a Phone" FontSize="Large"/>
            <Entry x:Name="phoneNumberText" Text="1-855-XAMARIN"/>
            <Button x:Name="translateButton" Text="Translate" Clicked="translateButton_Clicked" TextColor="{x:Static me:SharedResources.ButtonTextColor}" BackgroundColor="{x:Static me:SharedResources.ButtonBkColor}"/>
            <Button x:Name="callButton" Text="Call" IsEnabled="False" Clicked="callButton_Clicked"/>
            <BoxView Color="Blue"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>